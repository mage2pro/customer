<?xml version='1.0'?>
<config
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:module:Df_Config:etc/system_file.xsd"
>
	<system>
		<section
			id='dfe_customer'
			translate='label'
			type='text'
			showInDefault='1'
			showInWebsite='1'
			showInStore='1'
		>
			<tab>_df</tab>
			<label>Customer</label>
			<class>separator-top</class>
			<!--
				2016-03-31
				https://mage2.pro/t/1062
			-->
			<resource>Dfe_Customer::config</resource>
			<group
				id='format'
				translate='label'
				type='text'
				sortOrder='1'
				showInDefault='1'
				showInWebsite='1'
				showInStore='1'
			>
				<label>Format</label>
				<field
					id='enable'
					translate='label'
					type='Df\Framework\Data\Form\Element\Checkbox'
					sortOrder='1'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Enable?</label>
					<backend_model>Df\Config\Backend\Checkbox</backend_model>
					<comment><![CDATA[]]></comment>
				</field>
				<field
					id='items'
					translate='label'
					type='Df\Framework\Data\Form\Element\ArrayT'
					dfItemType='Dfe\CurrencyFormat\FormElement'
					sortOrder='2'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label></label>
					<comment><![CDATA[]]></comment>
					<backend_model>Df\Config\Backend\Serialized</backend_model>
					<depends><field id='enable'>1</field></depends>
				</field>
			</group>
		</section>
	</system>
</config>