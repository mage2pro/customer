<?xml version='1.0'?>
<config
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:module:Df_Config:etc/system_file.xsd"
>
	<system>
		<section
			id='dfe_customer'
			translate='label'
			type='text'
			showInDefault='1'
			showInWebsite='1'
			showInStore='1'
		>
			<tab>_df</tab>
			<label>Customer</label>
			<class>separator-top</class>
			<!--
				2016-03-31
				https://mage2.pro/t/1062
			-->
			<resource>Dfe_Customer::config</resource>
			<group
				id='common'
				translate='label'
				type='text'
				sortOrder='1'
				showInDefault='1'
				showInWebsite='1'
				showInStore='1'
			>
				<label>Common</label>
				<field
					id='enable'
					translate='label'
					type='Df\Framework\Data\Form\Element\Checkbox'
					sortOrder='1'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Enable?</label>
					<backend_model>Df\Config\Backend\Checkbox</backend_model>
					<comment><![CDATA[]]></comment>
				</field>
			</group>
			<group
				id='address'
				translate='label'
				type='text'
				sortOrder='2'
				showInDefault='1'
				showInWebsite='1'
				showInStore='1'
			>
				<label>Address</label>
				<field
					id='telephone'
					translate='label'
					type='select'
					sortOrder='1'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Telephone</label>
					<source_model>Magento\Config\Model\Config\Source\Nooptreq</source_model>
<!--
	2016-04-01
	Эта backend_model сама обновляет поля is_required и is_visible у свойства
	(причём эти поля находятся в разных таблицах).
	Код опции должен соответствовать коду свойства.
-->
					<backend_model>Magento\Customer\Model\Config\Backend\Show\Customer</backend_model>
					<comment><![CDATA[]]></comment>
				</field>
			</group>
		</section>
	</system>
</config>